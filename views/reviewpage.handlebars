<h2 class="text-danger mt-5 ms-3">{{game.name}}</h2>
<div>
<img src="{{game.image}}" width="600" height="500" alt="{{game.name}}" class="shadow-lg p-3 mb-5 ms-3 bg-body rounded">
<p class="ms-3">{{game.description}}</p>
<p class="ms-3">{{game.genre}}</p>
<p class="ms-3">{{game.release_date}}</p>
<p class="ms-3">{{game.platform}}</p>
</div> 
<h2 class="text-danger ms-3">Leave a review</h2>
<form class="reviewForm ms-3" id="reviewF">
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title" size="50"><br>
    <label for="comment">Comment Here:</label><br>
    <input type="text" id="comment" name="comment" size="50" method="post"><br>
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="1" max="10">
    <input type="submit" value="Submit">
</form>
<ul class="reply mt-5 ms-3">
    {{#each reviews as |review|}}
    <li><section data-value={{review.id}} class="testreview">
        <h3>{{review.user.name}}</h3>
        <h3>{{review.title}}</h3>
        <h4>{{review.date_posted}}</h4>
        <div>{{review.rating}}</div>
        <div>{{review.text}}</div>
        <div>
            <p class="text-danger">Upvotes</p>
            <button class="upvotes">{{review.up_votes}}</button>
            <p class="text-danger">Downvotes</p>
            <button id="downvotes">{{review.down_votes}}</button>
        </div>
    </section></li>
    {{/each}}
</ul>
